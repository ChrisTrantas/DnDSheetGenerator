extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    .navlink
      a(href="/logout") Log out
    .navlink
      a(href="/view") All Characters
    .navlink
      a(href="/editor") Edit Characters
  section#makeCharacter
    form#characterForm(class="characterForm", name="characterForm", action="/maker", method="POST")
      label(for="name") Name: 
      input#characterName(type="text", name="name", placeholder="Character Name")
      label(for="age") Age: 
      input#characterAge(type="text", name="age", placeholder="Character Age")
      label(for="profession") Class:
      input#characterProfession(type="text", name="profession", placeholder="Character Profession")
      label(for="race") Race: 
      input#characterRace(type="text", name="race", placeholder="Character Race")
      label(for="strength") Strength: 
      input#characterStrength(type="text", name="strength", placeholder="Strength")
      label(for="dexterity") Dexterity: 
      input#characterDexterity(type="text", name="dexterity", placeholder="Dexterity")
      label(for="constitution") Constitution: 
      input#characterConstitution(type="text", name="constitution", placeholder="Constitution")
      label(for="wisdom") Wisdom: 
      input#characterWisdom(type="text", name="wisdom", placeholder="Wisdom")
      label(for="intelligence") Intelligence: 
      input#characterIntelligence(type="text", name="intelligence", placeholder="Intelligence")
      label(for="charisma") Charisma: 
      input#characterCharisma(type="text", name="charisma", placeholder="Charisma")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#makeCharacterSubmit(class="makeCharacterSubmit", href="#") Make Character
  section#characters
    if !characters || characters.length == 0
        div.character
            h3.emptyCharacter No characters yet
    else
        each val in characters
            div.character
                h3.characterName Name: #{val.name}
                h3.characterAge Age: #{val.age}
                h3.characterRace Race: #{val.race}
                h3.characterProfession Class: #{val.profession}
                h3.characterStrength Strength: #{val.strength}
                h3.characterDexterity Dexterity: #{val.dexterity}
                h3.characterConstitution Constitution: #{val.constitution}
                h3.characterWisdom Wisdom: #{val.wisdom}
                h3.characterIntelligence Intelligence: #{val.intelligence}
                h3.characterCharisma Charisma: #{val.charisma}			
  #characterMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage
block scripts
        script(src="/assets/maker.js")